# StockWise Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env or keys.env to git!

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=stockwise

# Email Configuration - Choose ONE method:

# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY=your_sendgrid_api_key_here
ALERT_EMAIL_FROM=your-verified-email@yourdomain.com

# Option 2: SMTP (Gmail, etc.)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL_FROM=your-email@gmail.com

# Security
SECRET_KEY=your-secret-key-change-in-production

# Optional: Test Mode (sends alerts for all ingredients)
# TEST_MODE=false
